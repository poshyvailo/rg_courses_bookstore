%ul.nav.navbar-nav
  %li
    = link_to t(:'main_menu.home'), :root
  %li.dropdown
    %a.dropdown-toggle{ href: '#',
     'data-toggle': 'dropdown',
     role: 'button',
     'aria-haspopup': 'true',
     'aria-expanded': 'false'}
      = t(:menu_catalog)
    = render 'layouts/categories_submenu'
  - unless customer_signed_in?
    %li
      = link_to t(:'auth.sign_up'), :new_customer_registration
    %li
      = link_to t(:'auth.sign_in'), :new_customer_session
  - else
    %li.dropdown
      %a.dropdown-toggle{ href: '#',
      'data-toggle': 'dropdown',
      role: 'button',
      'aria-haspopup': 'true',
      'aria-expanded': 'false'}
        = t(:'main_menu.account')
      %ul.dropdown-menu
        %li
          = link_to t(:'main_menu.orders'), :customer_orders
        %li
          = link_to t(:'main_menu.settings'), :customer
        %li.divider{ role: 'separator' }
        %li
          = link_to t(:'auth.log_out'), :destroy_customer_session, method: :delete