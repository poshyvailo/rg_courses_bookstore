%h1.general-title-margin Checkout
= render 'checkout/progress'
= simple_form_for(@order, url: wizard_path,
  html: { method: 'PUT', class: '', id: 'addresses'}) do |f|
  %div.res-mb-100
    .hidden-xs.hidden-sm
      .row
        .col-md-5
          %h3.general-subtitle Billing Address
        .col-md-5.col-md-offset-1
          %h3.general-subtitle Shipping Address
    .row
      .col-md-5.mb-40
        .visible-xs.visible-sm
          %h3.general-subtitle.mt-0 Billing Address
        = f.simple_fields_for :billing_address do |ba|
          = ba.input :firstname, label: 'First Name', placeholder: 'First Name'
          = ba.input :lastname, label: 'Last Name', placeholder: 'Last Name'
          = ba.input :delivery_address, label: 'Address', placeholder: 'Address'
          = ba.input :city, label: 'City', placeholder: 'City'
          = ba.input :zipcode, label: 'Zip', placeholder: 'Zip'
          = ba.input :country, label: 'Country', prompt: 'Select a country'
          = ba.input :phone, label: 'Phone', placeholder: 'Phone'
      .col-md-5.col-md-offset-1.mb-60
        .visible-xs.visible-sm
          %h3.general-subtitle.mt-0 Shipping Address
        #shipping-address
          = f.simple_fields_for :shipping_address do |sa|
            = sa.input :firstname, label: 'First Name', placeholder: 'First Name'
            = sa.input :lastname, label: 'Last Name', placeholder: 'Last Name'
            = sa.input :delivery_address, label: 'Address', placeholder: 'Address'
            = sa.input :city, label: 'City', placeholder: 'City'
            = sa.input :zipcode, label: 'Zip', placeholder: 'Zip'
            = sa.input :country, label: 'Country', prompt: 'Select a country'
            = sa.input :phone, label: 'Phone', placeholder: 'Phone'
        .form-group.checkbox
          %label.checkbox-label
            %input.checkbox-input{type: "checkbox", name: :use_billing_address, hidden: "true"}
            %span.checkbox-icon
              %i.fa.fa-check
            %span.checkbox-text Use Billing Adress
    .general-text-align.mb-60
      %p.in-gold-500.font-18 Order Summary
      %table.general-summary-table
        %tr
          %td
            %p.font-16 Item Total:
          %td
            %p.font-16= @order.item_total
        %tr
          %td
            %p.font-16 Order Total:
          %td
            %p.font-16= @order.total_in_euro
      = f.button :submit, 'Save and Continue', class: 'btn btn-default center-block mb-20'