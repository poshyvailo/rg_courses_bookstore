%h1.general-title-margin Checkout
= render 'checkout/progress'
= current_order.billing_address.errors.inspect
= simple_form_for(@order, url: wizard_path,
  html: { method: 'PUT', class: ''}) do |f|
  %div.res-mb-100
    .hidden-xs.hidden-sm
      .row
        .col-md-5
          %h3.general-subtitle Billing Address
        .col-md-5.col-md-offset-1
          %h3.general-subtitle Shipping Address
    .row
      .col-md-5.mb-40
        .visible-xs.visible-sm
          %h3.general-subtitle.mt-0 Billing Address
        = f.simple_fields_for :billing_address do |ba|
          = ba.input :firstname
          = ba.input :lastname
          = ba.input :address
          = ba.input :zipcode
          = ba.input :phone
          = ba.input :city
          = ba.input :country
      .col-md-5.mb-40
        .visible-xs.visible-sm
          %h3.general-subtitle.mt-0 Shipping Address
        = f.simple_fields_for :shipping_address do |sa|
          = sa.input :firstname
          = sa.input :lastname
          = sa.input :address
          = sa.input :zipcode
          = sa.input :phone
          = sa.input :city
          = sa.input :country
        .form-group.checkbox
          %label.checkbox-label
            %input.checkbox-input{type: "checkbox", name: :use_billing_address, hidden: "true"}
            %span.checkbox-icon
              %i.fa.fa-check
            %span.checkbox-text Use Billing Adress
    .general-text-align.mb-60
      %p.in-gold-500.font-18 Order Summary
      %table.general-summary-table
        %tr
          %td
            %p.font-16 Item Total:
          %td
            %p.font-16 €117.69
        %tr
          %td
            %p.font-16 Order Total:
          %td
            %p.font-16 €117.69
      = f.button :submit, 'Save and Continue', class: 'btn btn-default center-block mb-20'