= simple_form_for(resource, url: registration_path(resource)) do |f|
  = f.input :email,
    label: t(:enter_email),
    placeholder: t(:enter_email),
    autocomplete: 'email',
    wrapper_html: { class: 'mb-30' }
  = f.input :password,
    label: t(:password),
    placeholder: t(:password),
    autocomplete: 'off',
    wrapper_html: { class: 'mb-30' }
  = f.input :password_confirmation,
    label: t(:confirm_password),
    placeholder: t(:confirm_password),
    autocomplete: 'off',
    wrapper_html: { class: 'mb-30' }
  .text-center
    = f.button :submit, t(:sing_up), class: 'btn btn-default mb-20'