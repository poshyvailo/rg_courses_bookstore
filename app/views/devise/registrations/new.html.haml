%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Sign Up
    %a.general-login-icon{href: "#"}
      %i.fa.fa-facebook-official
    %p.general-login-text or
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "general-form"}) do |f|
    = f.input :email,
      label: 'Enter email',
      placeholder: 'Enter email',
      autocomplete: 'email',
      wrapper_html: { class: 'mb-30' }
    = f.input :password,
      label: 'Password',
      placeholder: 'Password',
      autocomplete: 'off',
      wrapper_html: { class: 'mb-30' }
    = f.input :password_confirmation,
      label: 'Confirm Password',
      placeholder: 'Confirm Password',
      autocomplete: 'off',
      wrapper_html: { class: 'mb-30' }
    .text-center
      = f.button :submit, 'Sign Up', class: 'btn btn-default mb-20'
  %p.general-sign-text.text-center
    Have an Account?
    %a.in-gold-500{ href: "#{ new_customer_session_path }" } Sign In
