%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Sign Up
    %a.general-login-icon{href: "#"}
      %i.fa.fa-facebook-official
    %p.general-login-text or
  = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "general-form"}) do |f|
    .form-group.mb-30
      = f.label :email, 'Enter email',
        class: 'control-label input-label'
      = f.email_field :email,
        class: 'form-control',
        placeholder: 'Enter email',
        autocomplete: 'email'
      %span.help-block= resource.errors[:email].first unless resource.errors[:email].nil?
    .form-group.mb-30
      = f.label :password, 'Password',
         class: 'control-label input-label'
      = f.password_field :password,
        class: 'form-control',
        placeholder: 'Password',
        autocomplete: 'off'
      %span.help-block= resource.errors[:password].first unless resource.errors[:password].nil?
    .form-group.mb-30
      = f.label :password_confirmation, 'Confirm Password',
         class: 'control-label input-label'
      = f.password_field :password_confirmation,
        class: 'form-control',
        placeholder: 'Confirm Password',
        autocomplete: 'off'
    .text-center
      = f.submit 'Sign Up', class: 'btn btn-default mb-20'
  %p.general-sign-text.text-center
    Have an Account?
    %a.in-gold-500{ href: "#{ new_customer_session_path }" } Sign In
