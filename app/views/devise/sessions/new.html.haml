%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Log In
    %a.general-login-icon{href: "#"}
      %i.fa.fa-facebook-official
    %p.general-login-text or
  = form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "general-form"}) do |f|
    .form-group.mb-30
      %p= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error]
      %p= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice]
      %p= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert]
      = f.label :email, 'Enter Email',
        class: 'control-label input-label'
      = f.email_field :email,
        class: 'form-control',
        placeholder: 'Enter email',
        autocomplete: 'email'
      %span.help-block= resource.errors[:email].first unless resource.errors[:email].nil?
    .form-group.mb-30
      = f.label :password, 'Password',
         class: 'control-label input-label'
      = f.password_field :password,
        class: 'form-control',
        placeholder: 'Password',
        autocomplete: 'off'
      %span.help-block= resource.errors[:password].first unless resource.errors[:password].nil?
      %a.help-block.in-gold-500{href: "#{ new_customer_password_path }"} Forgot password?
    .form-group.checkbox.text-center.mb-30
      %label.checkbox-label
        = f.check_box :remember_me,
          hidden: 'true',
          class: 'checkbox-input'
        %span.checkbox-icon
          %i.fa.fa-check
        %span.checkbox-text Remember me
    .text-center
      = f.submit 'Log In', class: 'btn btn-default mb-20'
  %p.general-sign-text.text-center
    Donâ€™t have an Account?
    %a.in-gold-500{href: "#{ new_customer_registration_path }"} Sign Up