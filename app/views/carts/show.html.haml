- unless current_order.new_record?
  .general-main-wrap
    %h1.general-title-margin= t('cart.title')
    .visible-xs
      - @order.items.each do |item|
        = render 'carts/item_xs', item: item
    .hidden-xs
      %table.table.table-hover
        %tr.no-hover
          %th.col-pic.pl-0
            %span.in-grey-600= t('cart.product')
          %th.col-title
          %th.col-price
            %span.in-grey-600= t('cart.price')
          %th.col-quantity
            %span.in-grey-600= t('cart.quantity')
          %th.col-total
            %span.in-grey-600= t('cart.sub_total')
          %th.col-close
        - @order.items.each do |item|
          = render 'carts/item', item: item
    .general-order-wrap
      .row
        .col-sm-4
          = render 'carts/coupon_form'
        .col-sm-8
          .res-mr-200.text-center.general-text-right
            %p.in-gold-500.font-18= t('cart.order_summary')
            %table.general-summary-table.general-summary-table-right.general-text-right
              %tr
                %td
                  %p.font-16= "#{t('cart.sub_total')}:"
                %td
                  %p.font-16= currency(@order.sub_total)
              %tr
                %td
                  %p.font-16= "#{t('cart.coupon')}:"
                %td
                  %p.font-16= currency(@order.coupon_discount)
              %tr
                %td
                  %strong.font-18= "#{t('cart.order_total')}:"
                %td
                  %strong.font-18= currency(@order.total)
            %a.btn.btn-default.mb-20.visible-xs-inline-block{ href: order_checkout_index_path(current_order)}= t('cart.checkout_link')
    .text-center
      %a#checkout-btn-xs.btn.btn-default.mb-20.hidden-xs{ href: order_checkout_index_path(current_order)}= t('cart.checkout_link')
- else
  = render 'carts/empty_cart'